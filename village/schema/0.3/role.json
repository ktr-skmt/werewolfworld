{
    "title": "werewolf.world: Schema of role.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://werewolf.world/village/schema/0.3/role.json",
    "definitions": {
        "@context": {
            "title": "Role @context",
            "description": "role @context",
            "$id": "#@context",
            "type": "string",
            "pattern": "^https://werewolf.world/village/context/0.3/role.jsonld$",
            "default": "https://werewolf.world/village/context/0.3/role.jsonld",
            "examples": [
                "https://werewolf.world/village/context/0.3/role.jsonld"
            ]
        },
        "@id": {
            "title": "Role @id",
            "description": "role @id",
            "$id": "#@id",
            "type": "string",
            "pattern": "https://licos.online/state/0.3/village#[1-9][0-9]*/(((extensionalDisclosureRange/)?character#([1-9]|1[0-5])/)?role|role(#(hunter|madman|mason|master|medium|seer|villager|werehamster|werewolf)))",
            "examples": [
                "https://licos.online/state/0.3/village#3/character#1/role",
                "https://licos.online/state/0.3/village#3/role",
                "https://licos.online/state/0.3/village#3/character#1/role",
                "https://licos.online/state/0.3/village#3/role#villager",
                "https://licos.online/state/0.3/village#3/extensionalDisclosureRange/character#10/role"
            ]
        },
        "name": {
            "title": "Role Name",
            "description": "role name",
            "$id": "#name",
            "type": "object",
            "properties": {
                "en": {
                    "title": "Role English Name",
                    "description": "role English name",
                    "$id": "#name/properties/en",
                    "type": "string",
                    "enum": [
                        "Hunter",
                        "Madman",
                        "Mason",
                        "Medium",
                        "Seer",
                        "Villager",
                        "Werehamster",
                        "Werewolf"
                    ],
                    "examples": [
                        "Hunter",
                        "Madman",
                        "Mason",
                        "Medium",
                        "Seer",
                        "Villager",
                        "Werehamster",
                        "Werewolf"
                    ]
                },
                "ja": {
                    "title": "Role Japanese Name",
                    "description": "role Japanese name",
                    "$id": "#name/properties/ja",
                    "enum": [
                        "狩人",
                        "狂人",
                        "共有者",
                        "霊媒師",
                        "占い師",
                        "村人",
                        "ハムスター人間",
                        "人狼"
                    ],
                    "examples": [
                        "狩人",
                        "狂人",
                        "共有者",
                        "霊媒師",
                        "占い師",
                        "村人",
                        "ハムスター人間",
                        "人狼"
                    ]
                }
            },
            "required": [
                "en"
            ]
        },
        "image": {
            "title": "Role Image",
            "description": "role image",
            "$id": "#image",
            "type": "string",
            "default": "https://werewolf.world/image/0.3/villager.jpg",
            "enum": [
                "https://werewolf.world/image/0.3/hunter.jpg",
                "https://werewolf.world/image/0.3/madman.jpg",
                "https://werewolf.world/image/0.3/mason.jpg",
                "https://werewolf.world/image/0.3/medium.jpg",
                "https://werewolf.world/image/0.3/seer.jpg",
                "https://werewolf.world/image/0.3/villager.jpg",
                "https://werewolf.world/image/0.3/werehamster.jpg",
                "https://werewolf.world/image/0.3/werewolf.jpg"
            ],
            "examples": [
                "https://werewolf.world/image/0.3/hunter.jpg",
                "https://werewolf.world/image/0.3/madman.jpg",
                "https://werewolf.world/image/0.3/mason.jpg",
                "https://werewolf.world/image/0.3/medium.jpg",
                "https://werewolf.world/image/0.3/seer.jpg",
                "https://werewolf.world/image/0.3/villager.jpg",
                "https://werewolf.world/image/0.3/werehamster.jpg",
                "https://werewolf.world/image/0.3/werewolf.jpg"
            ]
        },
        "isMine": {
            "title": "Is Role Mine?",
            "description": "am I play the role?",
            "$id": "#isMine",
            "type": "boolean",
            "default": false,
            "examples": [
                true,
                false
            ]
        },
        "numberOfPlayers": {
            "title": "Number of Players",
            "description": "number of players",
            "$id": "#numberOfPlayers",
            "type": "integer",
            "minimum": 0,
            "maximum": 7,
            "default": 0,
            "examples": [
                0
            ]
        }
    }
}
